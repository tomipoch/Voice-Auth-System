# Development Environment Configuration
# Override variables for development

NODE_ENV=development
VITE_NODE_ENV=development

# Application Configuration
VITE_APP_NAME=VoiceAuth (DEV)
VITE_APP_VERSION=1.0.0-dev
VITE_DEBUG=true
VITE_LOG_LEVEL=debug

# API Configuration
VITE_API_BASE_URL=http://localhost:8000
VITE_API_TIMEOUT=30000

# Features flags
VITE_ENABLE_MOCK_DATA=true
VITE_ENABLE_DEV_TOOLS=true
VITE_ENABLE_ERROR_OVERLAY=true
VITE_ENABLE_CONSOLE_LOGS=true

# Authentication
VITE_JWT_SECRET=dev-secret-key-change-in-production
VITE_JWT_EXPIRES_IN=1h
VITE_REFRESH_TOKEN_EXPIRES_IN=7d

# Storage
VITE_STORAGE_PREFIX=voiceauth_
VITE_CLEAR_STORAGE_ON_VERSION_CHANGE=true

# Performance & Monitoring
VITE_ENABLE_ANALYTICS=false
VITE_ENABLE_PERFORMANCE_MONITORING=false
VITE_ENABLE_HOT_RELOAD=true

# Security
VITE_HTTPS=false
VITE_CORS_ENABLED=true
VITE_ENABLE_DEBUG_MODE=true
VITE_ENABLE_HOT_RELOAD=true
VITE_ENABLE_SOURCE_MAPS=true
VITE_MOCK_API=false

# Development Security (relaxed for testing)
VITE_ENABLE_HTTPS=false
VITE_CORS_ENABLED=true

# Analytics disabled in development
VITE_ENABLE_ANALYTICS=false

# Longer session for development convenience
VITE_SESSION_TIMEOUT=7200000

# Development specific audio settings
VITE_AUDIO_MAX_DURATION=60
VITE_AUDIO_MIN_DURATION=2