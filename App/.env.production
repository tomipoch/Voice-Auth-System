# Production Environment Configuration
# Variables for production deployment

NODE_ENV=production
VITE_NODE_ENV=production

# Application Configuration
VITE_APP_NAME=VoiceAuth
VITE_APP_VERSION=1.0.0
VITE_DEBUG=false
VITE_LOG_LEVEL=error

# API Configuration (replace with actual production URL)
VITE_API_BASE_URL=https://voiceauth-api.yourdomain.com
VITE_API_TIMEOUT=15000

# Features flags (disabled for security)
VITE_ENABLE_MOCK_DATA=false
VITE_ENABLE_DEV_TOOLS=false
VITE_ENABLE_ERROR_OVERLAY=false
VITE_ENABLE_CONSOLE_LOGS=false
VITE_ENABLE_DEBUG_MODE=false
VITE_ENABLE_HOT_RELOAD=false
VITE_ENABLE_SOURCE_MAPS=false

# Authentication (Use environment variables in production)
VITE_JWT_SECRET=production-secret-key-from-env
VITE_JWT_EXPIRES_IN=30m
VITE_REFRESH_TOKEN_EXPIRES_IN=24h

# Storage
VITE_STORAGE_PREFIX=voiceauth_
VITE_CLEAR_STORAGE_ON_VERSION_CHANGE=false

# Performance & Monitoring
VITE_ENABLE_ANALYTICS=true
VITE_ENABLE_PERFORMANCE_MONITORING=true
VITE_SESSION_TIMEOUT=3600000

# Security
VITE_HTTPS=true
VITE_CORS_ENABLED=false

# Audio Configuration (stricter limits for production)
VITE_AUDIO_MAX_DURATION=30
VITE_AUDIO_MIN_DURATION=3

# Build Optimization
VITE_BUILD_TARGET=esnext
VITE_MINIFY=true
VITE_BUNDLE_ANALYZE=false
VITE_COMPRESSION=true