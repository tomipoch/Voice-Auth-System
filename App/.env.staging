# Staging Environment Configuration
# Variables for staging/testing environment

NODE_ENV=staging

# Staging API (testing server)
VITE_API_BASE_URL=https://staging-voiceauth-api.yourdomain.com
VITE_API_TIMEOUT=20000

# Staging Features (some debug enabled for testing)
VITE_ENABLE_DEBUG_MODE=true
VITE_ENABLE_HOT_RELOAD=false
VITE_ENABLE_SOURCE_MAPS=true
VITE_MOCK_API=false

# Staging Security (moderate)
VITE_ENABLE_HTTPS=true
VITE_CORS_ENABLED=true

# Analytics enabled for testing
VITE_ENABLE_ANALYTICS=true

# Extended session for testing convenience
VITE_SESSION_TIMEOUT=5400000

# Staging audio settings (relaxed for testing)
VITE_AUDIO_MAX_DURATION=45
VITE_AUDIO_MIN_DURATION=2