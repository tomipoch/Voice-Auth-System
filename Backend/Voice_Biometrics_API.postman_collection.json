						"auth": {
							"type": "bearer",
							"bearer": [
								{
									"key": "token",
									"value": "{{access_token}}",
									"type": "string"
								}
							]
						},
						"method": "GET",
						"header": [],
						"url": {
							"raw": "{{base_url}}/api/phrases/{{phrase_id}}",
							"host": ["{{base_url}}"],
							"path": ["api", "phrases", "{{phrase_id}}"]
						},
						"description": "Obtener una frase específica por ID"
					},
					"response": []
				},
				{
					"name": "Record Phrase Usage",
					"request": {
						"auth": {
							"type": "bearer",
							"bearer": [
								{
									"key": "token",
									"value": "{{access_token}}",
									"type": "string"
								}
							]
						},
						"method": "POST",
						"header": [],
						"url": {
							"raw": "{{base_url}}/api/phrases/{{phrase_id}}/record-usage?user_id={{user_id}}&used_for=enrollment",
							"host": ["{{base_url}}"],
							"path": ["api", "phrases", "{{phrase_id}}", "record-usage"],
							"query": [
								{
									"key": "user_id",
									"value": "{{user_id}}"
								},
								{
									"key": "used_for",
									"value": "enrollment",
									"description": "enrollment o verification"
								}
							]
						},
						"description": "Registrar que un usuario usó una frase"
					},
					"response": []
				},
				{
					"name": "Update Phrase Status (Admin)",
