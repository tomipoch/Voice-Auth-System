		{
			"name": "Phrases",
			"item": [
				{
					"name": "Get Phrase Stats",
					"request": {
						"auth": {
							"type": "bearer",
							"bearer": [
								{
									"key": "token",
									"value": "{{access_token}}",
									"type": "string"
								}
							]
						},
						"method": "GET",
						"header": [],
						"url": {
							"raw": "{{base_url}}/api/phrases/stats?language=es",
							"host": ["{{base_url}}"],
							"path": ["api", "phrases", "stats"],
							"query": [
								{
									"key": "language",
									"value": "es"
								}
							]
						},
						"description": "Obtener estadísticas de frases disponibles"
					},
					"response": []
				},
				{
					"name": "Get Random Phrases",
					"request": {
						"auth": {
							"type": "bearer",
							"bearer": [
								{
									"key": "token",
									"value": "{{access_token}}",
									"type": "string"
								}
							]
						},
						"method": "GET",
						"header": [],
						"url": {
							"raw": "{{base_url}}/api/phrases/random?count=3&difficulty=medium&language=es",
							"host": ["{{base_url}}"],
							"path": ["api", "phrases", "random"],
							"query": [
								{
									"key": "count",
									"value": "3",
									"description": "Número de frases (1-10)"
								},
								{
									"key": "difficulty",
									"value": "medium",
									"description": "easy, medium, hard (opcional)"
								},
								{
									"key": "language",
									"value": "es"
								}
							]
						},
						"description": "Obtener frases aleatorias para enrollment/verification"
					},
					"response": []
				},
				{
					"name": "List All Phrases",
					"request": {
						"auth": {
							"type": "bearer",
							"bearer": [
								{
									"key": "token",
									"value": "{{access_token}}",
									"type": "string"
								}
							]
						},
						"method": "GET",
						"header": [],
						"url": {
							"raw": "{{base_url}}/api/phrases/list?limit=20&difficulty=easy",
							"host": ["{{base_url}}"],
							"path": ["api", "phrases", "list"],
							"query": [
								{
									"key": "limit",
									"value": "20"
								},
								{
									"key": "difficulty",
									"value": "easy",
									"disabled": true
								}
							]
						},
						"description": "Listar todas las frases activas"
					},
					"response": []
				},
				{
					"name": "Get Phrase by ID",
