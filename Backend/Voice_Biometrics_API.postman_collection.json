							"raw": "{{base_url}}/api/phrases/{{phrase_id}}/status?is_active=false",
							"host": ["{{base_url}}"],
							"path": ["api", "phrases", "{{phrase_id}}", "status"],
							"query": [
								{
									"key": "is_active",
									"value": "false"
								}
							]
						},
						"description": "Activar o desactivar una frase (solo admin)"
					},
					"response": []
				},
