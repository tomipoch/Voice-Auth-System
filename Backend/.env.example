# Environment variables for development
# Copy this file to .env and fill in your values

# Database (for local development, use SQLite or mock)
DATABASE_URL=sqlite:///./voice_biometrics.db

# API Configuration
API_HOST=127.0.0.1
API_PORT=8001
LOG_LEVEL=DEBUG

# Security (for development only)
JWT_SECRET_KEY=your-super-secret-jwt-key-for-development-only
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=30

# Development mode flags
DEVELOPMENT_MODE=true
MOCK_BIOMETRICS=true
SKIP_AUTH=true

# Optional services (disable for local development)
REDIS_URL=
DATABASE_POOL_SIZE=5