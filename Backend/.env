# Environment Variables Template
# Copy this file to .env and fill in your values

# Database Configuration - Using SQLite for development
DATABASE_URL=sqlite:///./voice_biometrics.db
DATABASE_POOL_SIZE=5
DATABASE_MAX_OVERFLOW=10

# API Configuration
API_HOST=127.0.0.1
API_PORT=8001
API_WORKERS=1
API_RELOAD=true

# Security - Development settings
SECRET_KEY=dev-secret-key-not-for-production-use-only
API_KEY_LENGTH=32
ENCRYPTION_KEY=dev-encryption-key-32-chars-here
DEVELOPMENT_MODE=true
SKIP_AUTH=true

# Machine Learning Models
SPEAKER_MODEL_PATH=/models/speaker_model.pt
ANTISPOOF_MODEL_PATH=/models/antispoof_model.pt
ASR_MODEL_PATH=/models/asr_model.pt

# Audio Processing
MAX_AUDIO_SIZE_MB=10
SUPPORTED_FORMATS=wav,mp3,flac,m4a
TEMP_AUDIO_DIR=/tmp/voice_biometrics

# Rate Limiting
DEFAULT_RATE_LIMIT_PER_HOUR=100
RATE_LIMIT_STORAGE=memory  # or redis://localhost:6379

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=json
LOG_FILE=/var/log/voice_biometrics/app.log

# Monitoring
ENABLE_METRICS=true
METRICS_PORT=9090

# Redis (optional, for rate limiting and caching)
REDIS_URL=redis://localhost:6379/0

# Development
DEBUG=false
RELOAD=false

# CORS Settings
CORS_ORIGINS=["http://localhost:3000", "https://yourdomain.com"]
CORS_ALLOW_CREDENTIALS=true

# Database Backup
BACKUP_ENABLED=true
BACKUP_SCHEDULE="0 2 * * *"  # Daily at 2 AM
BACKUP_RETENTION_DAYS=30

# Audio Retention Policy
DEFAULT_AUDIO_RETENTION_DAYS=7
MAX_AUDIO_RETENTION_DAYS=365
PURGE_JOB_SCHEDULE="0 3 * * *"  # Daily at 3 AM