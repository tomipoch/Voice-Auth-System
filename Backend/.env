# Environment Variables Template
# Copy this file to .env and fill in your values

# Database Configuration
DATABASE_URL=postgresql://voice_user:voice_password@localhost:5432/voice_biometrics
DATABASE_POOL_SIZE=20
DATABASE_MAX_OVERFLOW=30

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000
API_WORKERS=4
API_RELOAD=false

# Security
SECRET_KEY=your-super-secret-key-change-this-in-production
API_KEY_LENGTH=32
ENCRYPTION_KEY=your-encryption-key-32-chars-long

# Machine Learning Models
SPEAKER_MODEL_PATH=/models/speaker_model.pt
ANTISPOOF_MODEL_PATH=/models/antispoof_model.pt
ASR_MODEL_PATH=/models/asr_model.pt

# Audio Processing
MAX_AUDIO_SIZE_MB=10
SUPPORTED_FORMATS=wav,mp3,flac,m4a
TEMP_AUDIO_DIR=/tmp/voice_biometrics

# Rate Limiting
DEFAULT_RATE_LIMIT_PER_HOUR=100
RATE_LIMIT_STORAGE=memory  # or redis://localhost:6379

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=json
LOG_FILE=/var/log/voice_biometrics/app.log

# Monitoring
ENABLE_METRICS=true
METRICS_PORT=9090

# Redis (optional, for rate limiting and caching)
REDIS_URL=redis://localhost:6379/0

# Development
DEBUG=false
RELOAD=false

# CORS Settings
CORS_ORIGINS=["http://localhost:3000", "https://yourdomain.com"]
CORS_ALLOW_CREDENTIALS=true

# Database Backup
BACKUP_ENABLED=true
BACKUP_SCHEDULE="0 2 * * *"  # Daily at 2 AM
BACKUP_RETENTION_DAYS=30

# Audio Retention Policy
DEFAULT_AUDIO_RETENTION_DAYS=7
MAX_AUDIO_RETENTION_DAYS=365
PURGE_JOB_SCHEDULE="0 3 * * *"  # Daily at 3 AM